
@model IEnumerable<Department_Store.Models.DanhMuc>
@{
    ViewBag.Title = "DanhMuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr class="text-center">
        <th>@Html.ActionLink("Sản phẩm", "Index", "Admin", new { area = "" }, new { @class = "nav-link" }) </th>
        <th>@Html.ActionLink("Danh Mục", "DanhMucAdmin", "DanhMuc", new { area = "" }, new { @class = "nav-link" })</th>
        <th>@Html.ActionLink("Đơn Hàng", "XemDonHang", "DonHang", new { area = "" }, new { @class = "nav-link" })</th>

    </tr>
</table>
<h2 class="text-center">Danh Mục <br />@Html.ActionLink("Thêm danh mục", "ThemDM", new { area = "" }, new { @class = "btn btn-primary" })</h2>



<table class="table">
    <tr class="text-center">
        <th> Mã Danh mục </th>
        <th> Tên Danh mục</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>@Html.DisplayFor(modelItem => item.MaDM)</td>
            <td>@Html.ActionLink(item.TenDM, "DanhMucSP", new { id = item.MaDM })</td>
            <td>
                @Html.ActionLink(" ", "XoaDM", new { id = item.MaDM }, new { @class = "bi bi-trash" })
            </td>
        </tr>
    }
</table>