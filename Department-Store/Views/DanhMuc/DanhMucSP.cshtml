@model IEnumerable<Department_Store.Models.SanPham>
@{
    ViewBag.Title = "DanhMucSP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DanhMucSP</h2>

<div class="row">
    @foreach (var item in Model)
    {
        {
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel panel-heading">
                        @item.TenSP
                    </div>
                    <div class="panel-body">
                        <p><strong>Giá: </strong>@item.GiaSP</p>
                        <p><strong>Ngày cập nhật: </strong>@item.NgayNhap</p>
                        <p><strong>Số lượng tồn: </strong>@item.Slgton</p>
                        <p><img src="@item.HinhSP" alt="hinh thumnail" height="300"></p>
                    </div>
                    <div class="panel-footer clearfix">
                        <div class="pull-right">
                            <a class="btn btn-outline-success" href="@Url.Action("ThemGioHang", "GioHang",new { @id = item.MaSP, @strURL = Request.Url.ToString() })">Đặt mua</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    }
</div>