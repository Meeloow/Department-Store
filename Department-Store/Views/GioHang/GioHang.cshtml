@model IEnumerable<Department_Store.Models.GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.tensp)</th>
        <th>@Html.DisplayNameFor(model => model.hinh)</th>
        <th>@Html.DisplayNameFor(model => model.giaban)</th>
        <th>@Html.DisplayNameFor(model => model.isoluong)</th>
        <th>@Html.DisplayNameFor(model => model.dThanhtien)</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.tensp)</td>
            <td><img src="@item.hinh" width="180" /></td>
            @using (Html.BeginForm("Capnhatgiohang", "GioHang", new { @id = item.masp }))
            {
                <td>@String.Format("{0:0,0}", item.giaban) VND</td>
                <td> <input type="number" min="1" max="" name="txtSoLg" value="@item.isoluong" /></td>
                <td> @Html.DisplayFor(modelItem => item.dThanhtien) </td>
                <td>
                    @Html.ActionLink("Xóa", "XoaGioHang", new { @id = item.masp })
                </td>
                <td><input type="submit" value="Cập nhật" class="btn btn-success" /></td>

            }
        </tr>
    }
    <tr style="font-weight:bold; text-align:left; color:red">
        <td colspan="2"> Số loại sản phẩm: @ViewBag.Tongsoluongsanpham </td>
        <td colspan="2"> Số lượng sản phẩm: @ViewBag.Tongsoluong </td>
        <td colspan="4">
            Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VND
        </td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:center">
        <td colspan="5">
            @Html.ActionLink("Xóa giỏ hàng", "XoaTatCaGioHang", new { area = "" }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
    <tr style="font-weight: bold; color: yellow; text-align: center">
        <td colspan="5">
            @Html.ActionLink("Đặt hàng", "DatHang", "GioHang", new { area = "" }, new { @class = "btn btn-outline-success" })
        </td>
    </tr>
</table>