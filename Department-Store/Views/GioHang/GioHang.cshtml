<section class="h-100 gradient-custom">
    <div class="container py-5">
        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Sản Phẩm</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model)
                        {
                            <!-- Single item -->
                            <div class="row">
                                <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                    <!-- Image -->
                                    <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                        <img src="@item.hinh"
                                             class="w-100" alt="Blue Jeans Jacket" />
                                        <a href="#!">
                                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                        </a>
                                    </div>
                                    <!-- Image -->
                                </div>

                                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                    <!-- Data -->
                                    <p><strong>@Html.DisplayFor(modelItem => item.tensp)</strong></p>
                                        @using (Html.BeginForm("XoaGioHang", "GioHang", new { @id = item.masp }))
                                        {
                                            <div><input type="submit" value="Xoá" class="btn btn-danger" /></div>
                                        }                                 
                                    <!-- Data -->
                                </div>


                                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                    <!-- Quantity -->
                                    <div class="d-flex mb-4" style="max-width: 300px">
                                            @using (Html.BeginForm("Capnhatgiohang", "GioHang", new { @id = item.masp }))
                                            {
                                                <div><input type="number" min="1" max="" name="txtSoLg" value="@item.isoluong" /></div>
                                                <br />
                                                <div><input type="submit" value="Cập nhật" class="btn btn-success" /></div>
                                            }
                                    </div>
                                    <!-- Quantity -->
                                    <!-- Price -->
                                    <p class="text-start text-md-center">
                                        <p>

                                                 @Html.DisplayFor(modelItem => item.dThanhtien) VND
                                        </p>
                                    </p>
                                    <!-- Price -->
                                </div>
                            </div>
                            <!-- Single item -->
                        }
                        <hr class="my-4" />
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Thanh Toán</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                Tổng số sản phẩm
                                <span>@ViewBag.Tongsoluongsanpham</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                Tổng số lượng sản phẩm
                                <span>@ViewBag.Tongsoluong</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Tổng số tiền:</strong>
                                </div>
                                <span><strong>@String.Format("{0:0,0}", ViewBag.Tongtien) VND</strong></span>
                            </li>
                        </ul>
                        @Html.ActionLink("Đặt hàng", "DatHang", "GioHang", new { area = "" }, new { @class = "btn btn-primary btn-lg btn-block" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>